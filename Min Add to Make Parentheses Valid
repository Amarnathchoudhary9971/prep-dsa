class Solution {
  public:
    int minParentheses(string& s) {
        // code here
        int i=0;
        stack<char>st;
        while(i<s.size())
        {
            if(s[i]=='(')
            {
                st.push('(');
                i++;
            }else{
                i++;
                if(!st.empty() && st.top()=='(')
                {
                    st.pop();
                }else{
                    st.push(')');
                }
            }
        }
        return st.size();
    }
};
