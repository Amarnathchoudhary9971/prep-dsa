class Solution {
public:
    string longestPalindrome(string s) {
        string ans = "";
        int n = s.size();

        for(int i = 0; i < n; i++) {
            // Odd length palindrome
            int j = i, k = i;
            while(j >= 0 && k < n && s[j] == s[k]) {
                if(k - j + 1 > ans.size()) {
                    ans = s.substr(j, k - j + 1);
                }
                j--;
                k++;
            }

            // Even length palindrome
            j = i, k = i + 1;
            while(j >= 0 && k < n && s[j] == s[k]) {
                if(k - j + 1 > ans.size()) {
                    ans = s.substr(j, k - j + 1);
                }
                j--;
                k++;
            }
        }
        return ans;
    }
};
