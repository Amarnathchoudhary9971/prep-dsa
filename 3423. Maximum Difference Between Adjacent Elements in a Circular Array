class Solution {
public:
    int maxAdjacentDistance(vector<int>& nums) {
        int e=nums.size()-1;
        int maxi=abs(nums[0]-nums[e]);
        for(int i=0;i<nums.size()-1;i++)
        {
            int random=abs(nums[i]-nums[i+1]);
            maxi=max(maxi,random);
        }
        return maxi;
        
    }
};
