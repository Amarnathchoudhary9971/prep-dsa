class Solution {
public:
    vector<int> spiralOrder(vector<vector<int>>& matrix) {
        vector<int>ans;
        int startRow=0,startCol=0;
        int m=matrix.size();
        int n=matrix[0].size();
        int endRow=m-1;
        int endCol=n-1;
        int count=0;
        int target=m*n;
        while(count<target)
        {
            //move right;
           for(int j=startCol;j<=endCol && count<target;j++)
           {
            ans.push_back(matrix[startRow][j]);
            count++;
           }
           startRow++;
           for(int i=startRow;i<=endRow && count<target;i++)
           {
            ans.push_back(matrix[i][endCol]);
            count++;
           }
           endCol--;
           for(int j=endCol;j>=startCol && count<target;j--)
           {
            ans.push_back(matrix[endRow][j]);
            count++;
           }
           endRow--;
           for(int i=endRow;i>=startRow && count<target;i--)
           {
            ans.push_back(matrix[i][startCol]);
            count++;
           }
           startCol++;
        }
        return ans;
    }
};
