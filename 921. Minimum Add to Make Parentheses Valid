class Solution {
public:
    int minAddToMakeValid(string s) {
        stack<char>st;
        st.push('1');
        int ans=0;
        int i=0;
        while(i<s.size())
        {
            if(s[i]=='(')
            {
                st.push('(');
                i++;
            }else
            {
                if(st.top()=='(')
                {
                    st.pop();
                    i++;
                }else{
                    ans++;
                    i++;
                }
            }
        }
        while(st.top()!='1')
        {
            st.pop();
            ans++;
        }
        return ans;
    }
};
