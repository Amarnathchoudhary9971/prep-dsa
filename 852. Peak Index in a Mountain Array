class Solution {
public:
    int peakIndexInMountainArray(vector<int>& arr) {
        int i=0;
        int j=arr.size()-1;
        if(j==0)
        {
            return 0;
        }
        while(i<j)
        {
            int mid=(i+j)/2;
            if(arr[i]>arr[i+1])
            {
                return i;
            }
            if(arr[j]>arr[j-1])
            {
                return j;
            }
            if(arr[mid]>arr[mid+1] && arr[mid]>arr[mid-1])
            {
                return mid;
            }
            else if(arr[mid]<arr[mid+1])
            {
                i=mid+1;
            }
            else{
                j=mid-1;
            }
        }
        return 0;
    }
};
