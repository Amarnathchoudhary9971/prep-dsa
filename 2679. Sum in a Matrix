class Solution {
public:
    int matrixSum(vector<vector<int>>& nums) {
        // Step 1: Sort each row
        for (auto &row : nums) {
            sort(row.begin(), row.end());
        }

        int sum = 0;
        int m = nums.size(), n = nums[0].size();

        // Step 2: For each column, pick the maximum across all rows
        for (int j = 0; j < n; j++) {
            int maxi = 0;
            for (int i = 0; i < m; i++) {
                maxi = max(maxi, nums[i][j]); // âœ… correct indexing
            }
            sum += maxi;
        }

        return sum;
    }
};
