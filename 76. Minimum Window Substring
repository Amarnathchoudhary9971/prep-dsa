class Solution {
public:
    string minWindow(string s, string t) {
     int str=-1;
     int end=1e9;   
     int n=s.size();
     int m=t.size();
     if(s.size()<t.size())
     {
        return "";
     }
     int l=0,r=0;
     int count=0;
     int minlen=1e9;
     int mpp[256]={0};
     for(int i=0;i<m;i++)
     {
        mpp[t[i]]++;
     }
     while(r<n)
     {
        if(mpp[s[r]]>0)
        {
            count++;   
        }
        mpp[s[r]]--;
        while(count==m)
        {
            if(r-l+1<minlen)
            {
                minlen=r-l+1;
                str=l;
            }
            mpp[s[l]]++;
            if(mpp[s[l]]>0)
            {
                count--;
            }
            l++;
        }
        r=r+1;
     }
       if (str == -1) {
            return "";
        } else {
            return s.substr(str, minlen);
        }
    }
};
