class Solution {
public:
    vector<int> searchRange(vector<int>& nums, int target) {
        //for left  first index:
        vector<int> ans;
        int s=0;
        int e=nums.size()-1;
        int randomLeft=-1;
        while(s<=e)
        {
            int mid=(s+e)/2;
            if(target==nums[mid])
            {
                randomLeft=mid;
                e=mid-1;
            }
            else if(nums[mid]>target)
            {
                e=mid-1;
            }
            else{
                s=mid+1;
            }
        }
        ans.push_back(randomLeft);
        int  randomRight=-1;
        s=0;
        e=nums.size()-1;
         while(s<=e)
        {
            int mid=(s+e)/2;
            if(target==nums[mid])
            {
                randomRight=mid;
                s=mid+1;
            }
            else if(nums[mid]>target)
            {
                e=mid-1;
            }
            else{
                s=mid+1;
            }
        }
        ans.push_back(randomRight);
        return ans;
    }
};
